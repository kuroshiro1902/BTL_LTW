<%@page contentType="text/html" pageEncoding="UTF-8"%> 
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://kit.fontawesome.com/f8624d60dd.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="./css/signup.css">
        <title>Sign up</title>
    </head>
    <body>
        <div class="signup-container center-block">
            <div class="signup center-block">
                <div class="signup-header">
                    <div class="logo">
                        <img src="./img/logo.png" alt="">
                    </div>
                    
                </div>
                <div class="signup-body">
                    <div class="signup-body-title center-block">
                        <h1>ĐĂNG KÍ</h1>
                        <i>Trở thành thành viên ngay hôm nay!</i>
                    </div>
                    <div class="form-handle">
                        <form action="" method="post">
                            <div class="text-input input">
                                <label for="firstname">Họ:</label>
                                <input type="text" id="firstname" name="" placeholder="Họ" required>
                            </div>
                            <div class="text-input input">
                                <label for="lastname">Tên:</label>
                                <input type="text" id="lastname" name="" placeholder="Tên" required>
                            </div>
                            <div class="text-input input">
                                <label for="username">Tên đăng nhập:</label>
                                <input type="text" id="username" name="" placeholder="Tên đăng nhập" required>
                            </div>
                            <div class="text-input input">
                                <label for="email">Email:</label>
                                <input type="email" id="email" name="" placeholder="Email" required>
                            </div>
                            <div class="text-input input">
                                <label for="password">Mật khẩu:</label>
                                <input type="text" id="password" name="" placeholder="Mật khẩu" required>
                            </div>
                            <div class="text-input input">
                                <label for="confirmpswd">Nhập lại mật khẩu:</label>
                                <input type="text" id="confirmpswd" name="" placeholder="Nhập lại mật khẩu" required>
                            </div>
                            <div class="checkbox-input input center-block">
                                <input type="checkbox" id="agree" name="" required>
                                <label for="agree"> Đồng ý <a href="">điều khoản dịch vụ</a href=""> của chúng tôi</label>
                            </div>
                            <div class="submit-input input center-block">
                                <input type="submit" id="submit" name="" value="Submit">
                            </div>
                        </form>
                    </div>
                    <div class="have-account center-block">
                        <p>Already have an account? <a href="">Login here!</a></p>
                    </div>
                </div>
                <div class="signup-footer">
                    <div class="contact">
                        <span>Contact us: </span>
                        <span><a href=""><i class="fa-brands fa-facebook"></i></a></span>
                        <span><a href=""><i class="fa-brands fa-instagram"></i></a></span>
                        <span><a href=""><i class="fa-brands fa-amazon"></i></a></span>
                    </div>
                    <div class="license">
                        <span>@Copyright Shounen Jump 2023</span>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>